<div id="modal-netlify" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content border-indie">
      <div class="modal-header modal-indie">
        <h2 class="modal-title h5">{{ translate "netlify.config.title" }}</h2>
      </div>
      <div id="modal-netlify-body" class="modal-body">
        <form id="f-netlify-settings">
          <label class="mb-1" for="token-netlify">{{translate "netlify.config.token.label"}}</label>
          <div class="input-group">
            <input type="text" id="token-netlify" name="token-netlify" class="form-control" value="{{token}}"
              placeholder="{{translate "netlify.config.token.placeholder"}}" autocomplete="off" required />
            <button id="confirm-token" class="btn btn-indie input" type="button">{{translate "netlify.button.text"}}</button>
          </div>
          <div class="invalid-feedback"></div>
          <div id="div-sites" class="mb-3 d-none"></div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ translate "general.cancel"
          }}</button>
        <button type="button" class="btn btn-indie btn-submit">{{ translate "general.confirm" }}</button>
      </div>
    </div>
  </div>
</div>

