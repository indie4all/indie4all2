<div id="modal-prompt" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header modal-indie">
                <h2 class="modal-title h5">{{ title }}</h2>
            </div>
            <div class="modal-body">{{{ body }}}</div>
            <div class="modal-footer">
                <button type="button" class="btn btn-indie btn-cancel" data-bs-dismiss="modal">{{ cancel }}</button>
                <button type="button" class="btn btn-danger btn-confirm">{{ confirm }}</button>
            </div>
        </div>
    </div>
</div>