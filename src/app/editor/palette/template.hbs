<div class="dragula-anchor palette-section-header align-self-center" data-category-header="{{name}}"
    data-hidden="false">
    <div class="row wrap">
        <div class="col-12 col-md-9">
            <span class="header-label">{{translate title}} <i>({{numWidgets}} items)</i></span>
        </div>
        <div class="col-12 col-md-3 d-grid pe-3">
            <button type="button" 
                class="author-toggle-category float-right btn btn-outline btn-indie btn-sm" 
                data-bs-toggle="tooltip" title="{{translate "buttons.toggleCategories"}}">
                <i data-icon class="fa fa-caret-up"></i>
            </button>
        </div>
    </div>
</div>
