<div id="modal-bank-widgets" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content border-indie">
            <div class="modal-header modal-indie">
                <h2 id="modal-bank-widgets-tittle" class="modal-title h5"> {{ translate "widgets.Bank.modalTitle"}}</h2>
            </div>
            <div id="modal-bank-widgets-body" class="modal-body">
                <div class="form-group mb-4">
                    <input type="search" class="form-control ds-input" placeholder="Search by title of Widget"> 
                </div>
                <div class="panel-bank-widgets" style="max-height: 500px; overflow-y: scroll;">
                {{#each data}}
                <button class="col-md-12 d-flex mb-3 align-items-center p-3 border border-secondary widget-button" >
                    <div class="col-md-1">
                        <img src="{{ img }}">
                    </div>
                    <div class="col-md-11 pl-4">
                        <h3  class="h5"> {{ this.title }} </h3>
                        <p class="mb-0"> {{ this.desc }} </p>
                    </div>
                    <input type="hidden" name="json" value="{{ this.data }}">
                </button>
                {{/each}}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">{{ translate "general.cancel" }}</button>
            </div>
        </div>
    </div>
</div>