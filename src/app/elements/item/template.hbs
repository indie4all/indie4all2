<div class="container-item">
    <div class="widget {{cssClass}} row flex-column flex-md-row g-0" data-widget="{{widget}}" data-id="{{id}}">
        <div class="b1 col-auto d-none d-md-inline-block">
            <img loading="lazy" src="{{{icon}}}" class="img-fluid drag-item" alt="" />
        </div>
        <div class="b2 col-12 col-md-8" data-prev>{{{label}}}</div>
        <div class="b3 col-12 col-md-auto ms-auto" data-toolbar>
            {{#if canGenerate}}
            <button type="button" class="btn-toolbar-action btn-ai-edit-widget btn btn-sm btn-success" 
                data-bs-toggle="tooltip" title="{{translate "items.ai-edit-widget"}}">
                <i class="fa fa-brain"></i>
            </button>
            {{/if}}
            {{#if canEdit}}
            <button type="button" class="btn-toolbar-action btn-edit-element btn btn-sm btn-success" 
                data-bs-toggle="tooltip" title="{{translate "items.edit"}}">
                <i class="fa fa-edit"></i>
            </button>
            {{/if}}
            {{#if canCopy}}
            <button type="button" class="btn-toolbar-action btn-copy-element btn btn-sm btn-success" 
                data-bs-toggle="tooltip" title="{{translate "items.duplicate"}}">
                <i class="fa fa-copy"></i>
            </button>
            <button type="button" class="btn-toolbar-action btn-export-element btn btn-sm btn-success" 
                data-bs-toggle="tooltip" title="{{translate "items.export"}}">
                <i class="fa fa-file-export"></i>
            </button>
            {{/if}}
            {{#if canDelete}}
            <button type="button" class="btn-toolbar-action btn-remove-element btn btn-sm btn-danger" 
                data-bs-toggle="tooltip" title="{{translate "items.delete"}}">
                <i class="fa fa-times"></i>
            </button>
            {{/if}}
        </div>
    </div>
</div>