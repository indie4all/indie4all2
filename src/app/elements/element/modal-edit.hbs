<div id="widget-editor-{{id}}" class="modal fade widget-editor" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content border-indie">
            <div class="modal-header modal-indie">
                <h2 class="widget-editor-title modal-title h5">{{title}}</h2>
            </div>
            <div class="widget-editor-body modal-body">
                <div class="errors"></div>
                {{{form}}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ translate "general.cancel"
                    }}</button>
                <button type="button" class="btn btn-indie btn-submit">{{ translate "general.confirm" }}</button>
            </div>
        </div>
    </div>
</div>