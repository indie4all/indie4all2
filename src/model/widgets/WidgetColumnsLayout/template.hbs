<div class="container-item">
    <div class="widget-base widget-column-layout" data-widget="{{widget}}" data-id="{{id}}">
        <div class="widget flex-column flex-md-row">
            <div class="b1 col-auto d-none d-md-inline-block">
                <img loading="lazy" src="{{{icon}}}" class="img-fluid drag-item" alt="">
            </div>
            <div class="b2 col-12 col-md-auto" data-prev>{{translate "widgets.ColumnLayout.label"}}</div>
            <div class="b3 col-12 col-md-auto ml-auto" data-toolbar>
                {{#if canEdit}}
                <button class="author-edit-element btn btn-sm btn-success" data-toggle="tooltip" title="{{translate "items.edit"}}">
                    <i class="fa fa-edit"></i>
                </button>
                {{/if}}
                <button class="author-copy-element btn btn-sm btn-success" data-toggle="tooltip" 
                    title="{{translate "items.duplicate"}}">
                    <i class="fa fa-copy"></i>
                </button>
                <button class="author-export-element btn btn-sm btn-success" data-toggle="tooltip" 
                    title="{{translate "items.export"}}">
                    <i class="fa fa-file-export"></i>
                </button>
                <button class="author-remove-element btn btn-sm btn-danger" data-toggle="tooltip" 
                    title="{{translate "items.delete"}}">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="row no-gutters">
            {{#each columns}}
            <div class="col-12 col-md-{{this}}">
                <div data-role="container" data-widget="{{../widget}}" data-type="{{../type}}"
                    data-index="{{@index}}" class="element-container dragula-container">
                    {{{lookup ../children @index}}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>