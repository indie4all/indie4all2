<form id="f-{{instanceId}}" class="modal-body modal-bank">
    <div class="errors"></div>
    <div class="form-group d-lg-flex flex-wrap d-md-block" id="search-filters">
        <div class="search-condition d-flex col-12 p-0">
            <select class="form-control col-3 search-field">
                <option value="nombre">{{ translate "widgets.Bank.modal.filter.optionName"}}</option>
                <option value="tag">{{ translate "widgets.Bank.modal.filter.optionTag"}}</option>
                <option value="tipo">{{ translate "widgets.Bank.modal.filter.optionType"}}</option>
            </select>
            <input id="search-bank-widget" type="search" class="form-control ds-input col-9 search-term" placeholder="{{ translate "widgets.Bank.modal.placeholderTitle"}}">
            <select class="form-control ds-input col-9 search-type d-none">
                {{#each types}}
                    <option value="{{this}}"> {{ translate (concat 'widgets.'this '.label') }}</option>
                {{/each}}
            </select>
        </div>
    </div>
    <div class="input-group-append pr-0 pr-md-0 mb-3 justify-content-end">
            <button class="btn btn-secondary btn-add-filter mr-1" type="button">{{ translate "widgets.Bank.modal.addFilter"}}</button>
            <button class="btn btn-indie btn-search" type="button">{{translate "widgets.Bank.search"}}</button>
    </div>
    <div class="form-group options-bank-widgets " >
        <label class="col-lg-8 col-md-12 random-label"> 
            <input name="random" style="margin-right: 5px;" type="checkbox"> 
            {{ translate "widgets.Bank.modal.randomTextPrev"}} 
            <input name="random-number" style="width: 60px;" type="number" min="1"> 
            {{ translate "widgets.Bank.modal.randomTextBefore"}}
        </label>
        <label class="col-lg-4 col-md-12 select-all-label">{{ translate "widgets.Bank.modal.selectAllText"}} 
            <input class="select-all-input" type="checkbox">
        </label>
    </div> 
    <div class="panel-bank-widgets">
        {{#each data}}
            <button class="col-md-12 mb-3 align-items-center p-3 border border-secondary widget-button d-md-flex d-block" >
                <div class="col-sm-12 col-md-1">
                    <img src="{{{ img }}}">
                </div>
                <div class="col-sn-12 col-md-11 pl-4">
                    <h3  class="h5"> {{ name }} </h3>
                    <p class="mb-0"> {{ description }} </p>
                    {{#if tags}}
                        <ul class="list-tags justify-content-center justify-content-sm-start">
                        {{#each tags}}
                            <li><span class="badge badge-primary"><i class="fa-solid fa-tag"></i>{{this}}</span></li>
                        {{/each}}
                        </ul>
                    {{/if}}
                </div>
                <input type="checkbox" name="widget[{{@index}}][checked]" class="input-checkbox">
                <input type="hidden" name="widget[{{@index}}][type]" class="input-type" value="{{ type }}">
                <input type="hidden" name="widget[{{@index}}][group]" class="input-group" value="{{ group }}">
                <input type="hidden" name="widget[{{@index}}][content]" class="input-content" value="{{ content }}">
            </button>
        {{else}}
            <div class="alert-no-widgets">
                <span> {{ translate "widgets.Bank.modal.notFound"}} </span>
            </div>
        {{/each}}
    </div>
</form>
