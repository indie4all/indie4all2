<div id="modal-settings" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content border-indie">
            <div class="modal-header modal-indie">
                <h2 class="modal-title h5"></h2>
            </div>
            <div id="modal-settings-body" class="modal-body">
                <form id="f-unit-settings">
                    <div class="mb-3">
                        <label for="unit-title">{{translate "units.form.title.label"}}</label>
                        <input type="text" id="unit-title" name="title" class="form-control" value="{{title}}"
                            placeholder="{{translate "units.form.title.placeholder"}}" autocomplete="off" required />
                        <small class="form-text text-muted">{{translate "units.form.title.help"}}</small>
                    </div>
                    <div class="mb-3">
                        <label for="unit-language">{{translate "units.form.language.label"}}</label>
                        <select id="unit-language" name="language" class="form-control" required>
                            {{#each languages}}
                            <option value="{{this}}" {{#ifeq this ../language}} selected {{/ifeq}}>
                                {{translate (concat "common.language." this) }}
                            </option>
                            {{/each}}
                        </select>
                        <small class="form-text text-muted">{{translate "units.form.language.help"}}</small>
                    </div>
                    <div class="mb-3">
                        <label for="unit-license">{{translate "units.form.license.label"}}</label>
                        <select id="unit-license" name="license" class="form-control" required>
                            {{#each licenses}}
                            <option value="{{this}}" {{#ifeq this ../license}} selected {{/ifeq}}>
                                {{translate (concat "units.form.license." this) }}
                            </option>
                            {{/each}}
                        </select>
                        <small class="form-text text-muted">{{translate "units.form.license.help"}}</small>
                    </div>
                    <div class="mb-3">
                        <label for="unit-author">{{translate "units.form.author.label"}}</label>
                        <input type="text" id="unit-author" name="user" class="form-control" value="{{user}}" 
                            placeholder="{{translate "units.form.author.placeholder"}}" autocomplete="off" required />
                        <small class="form-text text-muted">{{translate "units.form.author.help"}}</small>
                    </div>
                    <div class="mb-3">
                        <label for="unit-email">{{translate "units.form.email.label"}}</label>
                        <input type="email" id="unit-email" name="email" class="form-control" value="{{email}}"
                            placeholder="{{translate "units.form.email.placeholder"}}" autocomplete="off" required />
                        <small class="form-text text-muted">{{translate "units.form.email.help"}}</small>
                    </div>
                    <div class="mb-3">
                        <label for="unit-institution">{{translate "units.form.institution.label"}}</label>
                        <input type="text" id="unit-institution" name="institution" class="form-control" value="{{institution}}"
                            placeholder="{{translate "units.form.institution.placeholder"}}" autocomplete="off" required />
                        <small class="form-text text-muted">{{translate "units.form.institution.help"}}</small>
                    </div>
                    <div class="mb-3">
                        <label for="unit-theme">{{translate "units.form.theme.label"}}</label>
                        <select id="unit-theme" name="theme" class="form-control" required>
                            {{#each themes}}
                            <option value="{{this}}" {{#ifeq this ../theme}} selected {{/ifeq}}>{{this}}</option>
                            {{/each}}
                        </select>
                        <small class="form-text text-muted">{{translate "units.form.theme.help"}}</small>
                    </div>
                    <div class="mb-3">
                        <label for="custom-theme-color-picker">{{translate "units.form.color.label"}}</label>
                        <div>
                            <input class="custom-theme form-control" placeholder="{{translate "units.form.color.placeholder"}}"
                                name="color" type="text" id="custom-theme-color-picker" required pattern="#[0-9a-fA-F]{6}">
                            <small class="form-text text-muted">{{translate "units.form.color.help"}}</small>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="custom-theme-background">{{translate "units.form.background.label"}}</label>
                        <input class="custom-theme form-control" type="file" id="custom-theme-background"
                            accept="image/png, image/jpeg">
                        <small class="form-text text-muted">{{translate "units.form.background.help"}}</small>
                        <input type="hidden" id="img-cover-blob" name="cover" value="{{blob}}" />
                        <img class="mt-4 img-fluid" id="img-cover-preview" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ translate "general.cancel" }}</button>
                <button type="button" class="btn btn-indie btn-submit">{{ translate "general.confirm" }}</button>
            </div>
        </div>
    </div>
</div>