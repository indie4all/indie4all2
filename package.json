  "scripts": {
    "clean": "rimraf dist/* && rimraf web/* && rimraf backend/*",
    "build": "tsc --project tsconfig_server.json && npx webpack --config webpack.prod.js",
    "start": "npm run build && pm2 start pm2.config.js",
    "start-dev": "tsc --project tsconfig_server.json && npm-run-all --parallel watch:server watch:build-web watch:build-server",
    "test": "npm run build && jasmine --config=spec/support/jasmine.json --reporter=jasmine-console-reporter",
    "dockerize": "npm run build && docker build --pull --rm -f Dockerfile -t indie4all2/indie4all2:latest .",
    "watch:build-web": "npx webpack --config webpack.dev.js",
    "watch:build-server": "tsc -w --project tsconfig_server.json",
    "watch:server": "nodemon ./backend/server.js"
  },
