<div class="widget-base widget-column-layout" data-type="{{type}}" data-widget="{{widget}}" data-id="{{id}}">
    <div class="widget">
        <div class="b1">
            <img src="{{{icon}}}" class="img-fluid drag-item">
        </div>
        <div class="b2" data-prev>
            <span>{{translate "widgets.ColumnLayout.label"}}</span>
        </div>
        <div class="b3" data-toolbar></div>
    </div>
    <div class="row">
        {{#each columns}}
        <div class="col-{{this}}">
            <div data-role="container" data-widget="{{../widget}}" data-type="{{../type}}"
                data-index="{{@index}}" class="element-container dragula-container">
            </div>
        </div>
        {{/each}}
    </div>
</div>